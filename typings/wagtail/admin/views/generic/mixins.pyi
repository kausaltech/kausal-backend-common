class RevisionsRevertMixin:
    revision_id_kwarg: ClassVar[str]
    revisions_revert_url_name: ClassVar[str | None]
    revision_id: str
    revision: Any

    def setup(self, request: HttpRequest, *args: Any, **kwargs: Any) -> None: ...
