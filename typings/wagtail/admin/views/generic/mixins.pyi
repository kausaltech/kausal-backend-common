    revision_enabled: bool
    draftstate_enabled: bool
    locking_enabled: bool
    lock: BasicLock | ScheduledForPublishLock | WorkflowLock | None
    locked_for_user: bool

    workflow: ClassVar[Any | None]
    workflow_enabled: ClassVar[bool]
    workflow_state: ClassVar[WorkflowState | None]
    current_workflow_task: ClassVar[Any | None]
