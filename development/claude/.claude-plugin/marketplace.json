{
  "name": "kausal-backend-plugins",
  "metadata": {
    "description": "Collection of plugins for Kausal Python backend development"
  },
  "owner": {
    "name": "Kausal",
    "email": "info@kausal.tech"
  },
  "plugins": [
    {
      "name": "basedpyright-lsp",
      "description": "Python language server using basedpyright - a pyright fork with stricter type checking and additional rules",
      "version": "1.0.0",
      "author": {
        "name": "Tyler Laprade"
      },
      "source": "./plugins/basedpyright-lsp",
      "category": "development",
      "strict": false,
      "homepage": "https://github.com/DetachHead/basedpyright",
      "tags": ["community-managed"],
      "lspServers": {
        "basedpyright": {
          "command": "basedpyright-langserver",
          "args": ["--stdio"],
          "extensionToLanguage": {
            ".py": "python",
            ".pyi": "python"
          }
        }
      }
    }
  ]
}
